---
type ParagraphType = {
    primaryText: string;
    secondaryText: string;
    tertiaryText: string;
    buttonText: string;
    icon: {
        filename: string;
    }
};

const { primaryText, secondaryText, tertiaryText, buttonText, icon} = Astro.props;
---
<div class="flex flex-col items-center p-4 bg-white rounded shadow w-64">
    <img class="mb-4" src={icon.filename} alt={primaryText} />
    <p class="text-sm text-accent-light mb-4"> {primaryText} </p> 
    <button class="px-4 py-2 mb-4 bg-primary text-white rounded-3xl"> {buttonText} </button> 
    <p class="text-sm font-bold text-accent-dark mb-2"> {secondaryText} </p> 
    <p class="text-sm text-primary"> {tertiaryText} </p>
</div>
